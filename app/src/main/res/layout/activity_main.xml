<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        style="@style/Main_text"
        android:text="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/statistics"
            android:orientation="vertical">
            <TextView
                style="@style/stat"
                android:text="@string/player1"
                />
            <TextView
                style="@style/stat"
                android:id="@+id/score_1"
                android:text="@string/score"
                tools:text="Score: 6"/>
        </LinearLayout>
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <LinearLayout
            style="@style/statistics"
            android:orientation="vertical">
            <TextView
                style="@style/stat"
                android:text="@string/player2"
                />
            <TextView
                style="@style/stat"
                android:id="@+id/score_2"
                android:text="@string/score"
                tools:text="Score: 0"/>
        </LinearLayout>



    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TableRow>

            <Button
                android:id="@+id/TV_00"
                style="@style/button"
                tools:text="X" />
            <Button
                style="@style/button"
                android:id="@+id/TV_01"
                tools:text="O"/>

            <Button
                style="@style/button"
                android:id="@+id/TV_02"/>
        </TableRow>

        <TableRow>
            <Button
                style="@style/button"
                android:id="@+id/TV_10"
                />
            <Button
                style="@style/button"
                android:id="@+id/TV_11"
                />
            <Button
                style="@style/button"
                android:id="@+id/TV_12"
                />
        </TableRow>

        <TableRow>
            <Button
                style="@style/button"
                android:id="@+id/TV_20"
                />
            <Button
                style="@style/button"
                android:id="@+id/TV_21"
                />
            <Button
                style="@style/button"
                android:id="@+id/TV_22"
                />
        </TableRow>

    </TableLayout>

    <Button
        style="@style/settings"
        android:id="@+id/reset_game"
        android:text="@string/reset"/>


</LinearLayout>